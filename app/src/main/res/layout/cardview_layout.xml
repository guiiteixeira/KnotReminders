                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/titleView"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textSize="18sp" android:textStyle="bold"/>
            <TextView
                    android:text="18/12/1998"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/alertDate"
                    app:layout_constraintTop_toBottomOf="@+id/titleView" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    android:textSize="10sp"/>
            <TextView
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/resume"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/alertDate"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
